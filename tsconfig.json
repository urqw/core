{
  "compilerOptions": {
    "strict": true,

    "removeComments": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "outFile": "./dist/core.js",
    "module": "amd",
    "moduleResolution": "node",
    "target": "es5"
  },
  "include": [
    "src/**/*.ts"
  ]
}
